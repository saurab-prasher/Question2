<html>
  <head>
    <title>All Invoices</title>

  </head>
  <body>
    <h2 class="mt-4 display-5">
      All Invoices data
    </h2>
   <div class="container mt-5">
  <div class="row mb-2">
    {{#each invoices}}
      <div class="col-md-3 mb-4">
        <div class="card h-100 d-flex flex-column">

          <img
            src="{{getProperty this 'image'}}"
            class="card-img-top fixed-height-image"
            alt="{{getProperty this 'name'}}"
          />

          <div class="card-body mb-2 flex-grow-1">
            <p class="card-text">{{getProperty this "name"}}</p>

            <ul class="list-group list-group-flush">
              <li class="list-group-item">Invoice ID:
                {{getProperty this "Invoice ID"}}</li>
              <li class="list-group-item">Customer Type:
                {{getProperty this "Customer type"}}</li>
              <li class="list-group-item">Product Line:
                {{getProperty this "Product line"}}</li>

              <li class="list-group-item">Unit Price:
                {{getProperty this "Unit price"}}</li>

              <li class="list-group-item">Quantity:
                {{getProperty this "Quantity"}}</li>
              <li class="list-group-item">Tax:
                {{getProperty this "Tax 5%"}}</li>
              <li class="list-group-item">Total:
                {{getProperty this "Total"}}</li>
            </ul>
          </div>

          <div class="card-footer">
            <a
              href="invoice/{{getProperty this 'Invoice ID'}}"
              class="btn btn-primary w-100"
            >See info</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

      <!-- Pagination Controls -->
      <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
          {{#each pagination}}
            {{#if this.isCurrent}}
              <li class="page-item active" aria-current="page">
                <span class="page-link">{{this.pageNumber}}</span>
              </li>
            {{else}}
              <li class="page-item">
                <a
                  class="page-link"
                  href="/allInvoices?page={{this.pageNumber}}&limit={{this.limit}}"
                >
                  {{this.pageNumber}}
                </a>
              </li>
            {{/if}}
          {{/each}}
        </ul>
      </nav>
    </div>
  </body>
</html>